<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/palette_item" >
    
    <LinearLayout 
        android:id="@+id/palette_item_thumb_frame" 
        android:orientation="horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:gravity="center">
        
        <ImageView 
            android:id="@+id/palette_item_thumb"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/color_photogray"
            android:scaleType="centerCrop"
            android:contentDescription="@string/palette_thumb_desc"/>
        
    </LinearLayout>
    
    <ImageView 
         android:id="@+id/palette_item_options"
         android:layout_width="40dp"
         android:layout_height="fill_parent"
         android:layout_alignTop="@+id/palette_item_thumb_frame"
         android:layout_alignBottom="@+id/palette_item_thumb_frame"
         android:background="@drawable/button"
         android:src="@android:drawable/ic_menu_more"
         android:layout_alignParentRight="true"
         android:onClick="onClick"
         android:contentDescription="@string/palette_option_btn_desc"/>
    
    <TextView 
        android:id="@+id/palette_item_title"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/palette_item_thumb_frame"
        android:layout_toLeftOf="@+id/palette_item_options"
        android:paddingLeft="5dp"
        android:gravity="center|left"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/color_darkgray"
        android:text="@string/palette_title_default" />
    
    <TextView 
        android:id="@+id/palette_item_updated"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_toRightOf="@+id/palette_item_thumb_frame"
        android:layout_toLeftOf="@+id/palette_item_options"
        android:layout_below="@+id/palette_item_title"
        android:paddingLeft="5dp"
        android:gravity="center|left"
        android:textSize="12sp"
        android:textColor="@color/color_gray" />
    
     <LinearLayout 
         android:id="@+id/palette_item_colors_bar"
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:layout_toRightOf="@+id/palette_item_thumb_frame"
         android:layout_toLeftOf="@+id/palette_item_options"
         android:layout_alignBottom="@+id/palette_item_thumb_frame"
         android:gravity="center"
         android:orientation="vertical" >
         
         <com.tzapps.tzpalette.ui.PaletteColorGrid
             android:id="@+id/palette_item_colors"
             android:layout_width="fill_parent"
             android:layout_height="30dp"
             android:gravity="center"
             android:horizontalSpacing="2dp"
             android:verticalSpacing="5dp"
             android:columnWidth="28dp"
             android:numColumns="auto_fit"
             android:stretchMode="columnWidth" />
         
     </LinearLayout>

</RelativeLayout>
