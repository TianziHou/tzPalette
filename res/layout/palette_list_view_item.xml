<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/palette_item" >

    <RelativeLayout
        android:id="@+id/palette_item_thumb_frame"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/palette_item_thumb"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="@color/color_photogray"
            android:contentDescription="@string/palette_thumb_desc"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/palette_item_favourite_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/palette_item_option_area"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/palette_item_options"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/button_no_bg"
            android:contentDescription="@string/palette_option_btn_desc"
            android:onClick="onClick"
            android:src="@android:drawable/ic_menu_more" />
    </LinearLayout>

    <TextView
        android:id="@+id/palette_item_title"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_toLeftOf="@+id/palette_item_option_area"
        android:layout_toRightOf="@+id/palette_item_thumb_frame"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:text="@string/palette_title_default"
        android:textColor="@color/color_darkgray"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/palette_item_updated"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/palette_item_title"
        android:layout_toLeftOf="@+id/palette_item_option_area"
        android:layout_toRightOf="@+id/palette_item_thumb_frame"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:textColor="@color/color_gray"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/palette_item_colors_bar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/palette_item_thumb_frame"
        android:layout_toLeftOf="@+id/palette_item_option_area"
        android:layout_toRightOf="@+id/palette_item_thumb_frame"
        android:gravity="center"
        android:orientation="vertical" >

        <com.tzapps.tzpalette.ui.PaletteColorGrid
            android:id="@+id/palette_item_colors"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:columnWidth="28dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />
    </LinearLayout>

</RelativeLayout>