<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/color_list_item_height"
    android:gravity="center"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/color_info_html_bar"
        android:layout_width="@dimen/color_list_html_bar_width"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/color_info_color_bar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/color_lightgray"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/color_info_html"
            style="@style/ColorInfoColorBarText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/color_info_rgb_r"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/color_info_rgb_r_value"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/color_info_rgb_g"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/color_info_rgb_g_value"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/color_info_rgb_b"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/color_info_rgb_b_value"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/color_info_hsv_h"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/color_info_hsv_h_value"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/color_info_hsv_s"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.6"
        android:gravity="center"
        android:text="@string/color_info_hsv_s_value"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/color_info_hsv_v"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/color_info_hsv_v_value"
        android:textSize="14sp" />

</LinearLayout>