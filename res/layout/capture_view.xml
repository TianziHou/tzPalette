<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_capture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?android:attr/actionBarSize"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >
    
    <ImageView
        android:id="@+id/img_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/img_pic_init_bg"
        android:contentDescription="@string/img_pic_desc" />
    
    <Button
        android:id="@+id/btn_loadPicture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_pic"
        android:layout_marginTop="14dp"
        android:onClick="loadPicture"
        android:text="@string/button_loadPicture" />

    <Button
        android:id="@+id/btn_takePhoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_loadPicture"
        android:onClick="takePhoto"
        android:text="@string/button_takePhoto" />

</RelativeLayout>
