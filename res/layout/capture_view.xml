<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_capture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/palette_card_bg"
    tools:context=".ui.CaptureFragment" >

    <RelativeLayout
        android:id="@+id/capture_view_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/capture_view_bottom_bar" >

        <ImageView
            android:id="@+id/capture_view_picture"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/img_pic_desc" />

        <LinearLayout
            android:id="@+id/pic_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn_takePhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:src="@android:drawable/ic_menu_camera"
                android:contentDescription="@string/btn_takePhoto_desc"
                android:scaleType="fitCenter"
                android:onClick="onClick"
                android:soundEffectsEnabled="true" />

            <ImageView
                android:id="@+id/pic_separator"
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:drawable/divider_horizontal_bright"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/btn_loadPicture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="@string/btn_loadPicture_desc"
                android:scaleType="fitCenter"
                android:onClick="onClick"
                android:soundEffectsEnabled="true" />
        </LinearLayout>

        <!--
        <TextView
            android:id="@+id/tv_palette_title"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="@color/color_palette_card_title_bg"
            android:paddingLeft="10dp"
            android:gravity="center_vertical|left"
            android:text="@string/palette_title_default"
            android:textColor="@color/color_lightgray"
            android:textSize="18sp"
            android:textStyle="bold"/>
        -->
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/capture_view_colors_bar"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/capture_view_colors_bar_frame"
        android:gravity="center"
        android:visibility="invisible"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/btn_analysis"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:padding="3dp"
            android:background="@drawable/button"
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="@string/btn_analysis_desc"
            android:onClick="onClick"
            android:soundEffectsEnabled="true" />
        
       <ImageView
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:layout_margin="2dp"
            android:background="@android:drawable/divider_horizontal_bright"
            tools:ignore="ContentDescription" />

        <com.tzapps.tzpalette.ui.PaletteColorGrid
            android:id="@+id/capture_view_colors"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:columnWidth="35dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:numColumns="auto_fit"
            android:paddingTop="5dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/capture_view_bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_gray"
        android:visibility="invisible"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="@string/btn_clear_desc"
            android:onClick="onClick"
            android:soundEffectsEnabled="true" />
        
        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_save"
            android:contentDescription="@string/btn_save_desc"
            android:onClick="onClick"
            android:soundEffectsEnabled="true" />
        
    </LinearLayout>

</RelativeLayout>