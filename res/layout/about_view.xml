<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_capture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/app_bg" >
    
    <LinearLayout 
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="left|center"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/about_title_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_web"
            tools:ignore="ContentDescription" />
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView 
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="30sp" />
                   
            <TextView
                android:id="@+id/about_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_gray"
                android:text="@string/about_version" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">
        
        <LinearLayout
            android:layout_width="@dimen/about_view_option_area_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"            android:orientation="vertical">
            
	        <LinearLayout 
	            android:id="@+id/about_author"
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/about_view_option_height"
	            android:layout_margin="5dp"
	            android:paddingLeft="10dp"
	            android:gravity="left|center"
	            android:clickable="true"
	            android:onClick="onClick"
	            android:background="@color/about_bar_linkedin_bg"
	            android:orientation="horizontal">
	            
	            <ImageView
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginRight="10dp"
	                android:src="@drawable/ic_linkedin_logo"
	                android:scaleType="fitCenter"
	                tools:ignore="ContentDescription" />
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/app_author"
	                android:textAppearance="@style/AboutViewButtonText" />
	            
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:id="@+id/about_creative"
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/about_view_option_height"
	            android:layout_margin="5dp"
	            android:paddingLeft="10dp"
	            android:gravity="left|center"
	            android:clickable="true"
	            android:onClick="onClick"
	            android:background="@color/about_bar_linkedin_bg"
	            android:orientation="horizontal">
	            
	            <ImageView
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginRight="10dp"
	                android:src="@drawable/ic_linkedin_logo"
	                android:scaleType="fitCenter"
	                tools:ignore="ContentDescription" />
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/app_creative"
	                android:textAppearance="@style/AboutViewButtonText" />
	            
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:id="@+id/about_feedback"
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/about_view_option_height"
	            android:layout_margin="5dp"
	            android:paddingLeft="10dp"
	            android:gravity="left|center"
	            android:clickable="true"
	            android:onClick="onClick"
	            android:background="@color/about_bar_feedback_bg"
	            android:orientation="horizontal">
	            
	            <ImageView
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginRight="10dp"
	                android:src="@drawable/ic_feedback"
	                android:scaleType="fitCenter"
	                tools:ignore="ContentDescription" />
	            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/about_feedback"
	                android:textAppearance="@style/AboutViewButtonText" />
	            
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:id="@+id/about_rate"
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/about_view_option_height"
	            android:layout_margin="5dp"
	            android:paddingLeft="10dp"
	            android:gravity="left|center"
	            android:clickable="true"
	            android:onClick="onClick"
	            android:background="@color/about_bar_rate_bg"
	            android:orientation="horizontal">
	            
	            <ImageView
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginRight="10dp"
	                android:src="@drawable/ic_rate_us"
	                android:scaleType="fitCenter"
	                tools:ignore="ContentDescription" />
	            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/about_rate_us"
	                android:textAppearance="@style/AboutViewButtonText"/>
	            
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:id="@+id/about_project"
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/about_view_option_height"
	            android:layout_margin="5dp"
	            android:paddingLeft="10dp"
	            android:gravity="left|center"
	            android:clickable="true"
	            android:onClick="onClick"
	            android:background="@color/about_bar_project_bg"
	            android:orientation="horizontal">
	            
	            <ImageView
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginRight="10dp"
	                android:src="@drawable/ic_github_logo"
	                android:scaleType="fitCenter"
	                tools:ignore="ContentDescription" />
	           
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/about_project"
	                android:textAppearance="@style/AboutViewButtonText"/>
	            
	        </LinearLayout>
	        
        </LinearLayout>
        
    </ScrollView>
    
</LinearLayout>
    