<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Pager Title Sritp Text style -->
    <style name="PagerTitleStripText">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/pager_title_strip_text</item>
    </style>
    
    <!--  Color Info View Color Bar Text style -->
    <style name="ColorInfoColorBarText">
	    <item name="android:textColor">@color/color_bar_text</item>
	    <item name="android:shadowColor">@color/color_bar_text_shadow</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">1</item>
    </style>
    
    <!--  Color Info View Tab Info Title Text Style -->
    <style name="ColorInfoTabTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_darkgray</item>
    </style>
  
    <!-- About View Button Text style -->
    <style name="AboutViewButtonText">
        <item name="android:textColor">@color/color_lightgray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
