<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarSize">35dp</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
    </style>
    
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <!-- semi transparent background -->
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:backgroundStacked">@color/actionbar_bg</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:height">35dp</item>
    </style>
    
    <!-- ActoinBar tabs text styles -->
    <style name="MyActionBarTabText" parent="@android:style/Widget.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_tab_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    
</resources>
